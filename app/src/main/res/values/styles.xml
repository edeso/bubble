<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primaryDark</item>

        <item name="colorAccent">@color/primaryDark</item>
        <!--
        <item name="colorControlNormal">@color/lightest</item>
        -->
        <item name="colorControlHighlight">@color/ripple_material_light</item>

        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColorSecondary">@color/lightest</item>
        <item name="android:textColor">@color/darkest</item>

        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/lightest</item>
        <item name="android:textColorSecondary">@color/lightest</item>
        <item name="android:textColor">@color/lightest</item>
    </style>

    <style name="MyPopupMenu" parent="AppTheme">
        <item name="android:background">@color/primaryDark</item>
        <item name="android:listPreferredItemHeightSmall">36dp</item>

        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/white_trans75</item>
        <item name="colorControlActivated">@color/white</item>
        <!--
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        -->
    </style>

    <style name="MyDrawerMenu" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationViewTextStyle" parent="AppTheme">
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
    </style>

    <style name="CardTitle" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">CardTitle</item>
    </style>
    <style name="CardSubTitle" parent="CardTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">CardSubTitle</item>
    </style>
    <style name="LibraryHeader" parent="CardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">Header</item>
    </style>
</resources>